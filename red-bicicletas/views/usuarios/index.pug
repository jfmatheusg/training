extends ../layout

block content
    a.btn.btn-success(href='/usuarios/create') Nuevo Usuario

    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Nombre
                th(scope='col') Email
                th(scope='col') Verificado
                th(scope='col')
                th(scope='col')
            tbody
                each usuario in usuarios
                    tr
                        td(scope='row')
                         = usuario.id
                        td= usuario.ids
                        td= usuario.nombre
                        td= usuario.email
                        td= usuario.verificado ? 'SI' : 'NO'
                        td
                            a.btn(href='usuario/' + usuario.id + '/update') Editar
                        td
                            form.inline(method='post' action='usuarios/' + usuario.id + '/delete')
                                input(type='hidden' name='id' value= usuario.id )
                                button.link-button.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
                                    = 'Eliminar'
